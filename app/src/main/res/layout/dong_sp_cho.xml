<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="20dp"
    android:background="@drawable/custom_dong_all_sp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imagebuttonmenuspcho"
        android:layout_width="20dp"
        android:src="@drawable/iconmenu"
        android:layout_height="20dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:id="@+id/imageviewspcho"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:text="Tên SP:"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:id="@+id/textviewtenspcho"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:text="Số Lượng:"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/textviewsoluongspcho"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:text="Giá:"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/textviewgiaspcho"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:text="Địa Chỉ:"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/textviewdiachispcho"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>